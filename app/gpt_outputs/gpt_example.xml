<?xml version="1.0" encoding="UTF-8"?>
<TaskTemplate xmlns="https://robotics.ucmerced.edu/task" xmlns:xs="http://www.w3.org/2001/XMLSchema-instance">
    <CompositeTaskInformation>
        <TaskID>Mission001</TaskID>
        <TaskDescription>take picture of north most tree. if green, go to end. if yellow, take picture of south most tree then end.</TaskDescription>
    </CompositeTaskInformation>
    <Preconditions>
        <Precondition>
            <Condition>atStartingPoint</Condition>
        </Precondition>
    </Preconditions>
    <AtomicTasks>
        <AtomicTask>
            <TaskID>MoveToNorthMostTree</TaskID>
            <TaskDescription>Move to the north-most tree</TaskDescription>
            <Action>
                <ActionType>moveToLocation</ActionType>
                <moveToLocation>
                    <Latitude>37.266406</Latitude>
                    <Longitude>-120.4201625</Longitude>
                </moveToLocation>
            </Action>
            <Parameters/>
        </AtomicTask>
        <AtomicTask>
            <TaskID>TakePictureNorthMostTree</TaskID>
            <TaskDescription>Take a thermal picture of the north-most tree</TaskDescription>
            <Action>
                <ActionType>takeThermalPicture</ActionType>
                <takeThermalPicture>
                    <numberOfPictures>1</numberOfPictures>
                </takeThermalPicture>
            </Action>
            <Parameters/>
        </AtomicTask>
        <AtomicTask>
            <TaskID>MoveToSouthMostTree</TaskID>
            <TaskDescription>Move to the south-most tree</TaskDescription>
            <Action>
                <ActionType>moveToLocation</ActionType>
                <moveToLocation>
                    <Latitude>37.266139</Latitude>
                    <Longitude>-120.4201578</Longitude>
                </moveToLocation>
            </Action>
            <Parameters/>
        </AtomicTask>
        <AtomicTask>
            <TaskID>TakePictureSouthMostTree</TaskID>
            <TaskDescription>Take a thermal picture of the south-most tree</TaskDescription>
            <Action>
                <ActionType>takeThermalPicture</ActionType>
                <takeThermalPicture>
                    <numberOfPictures>1</numberOfPictures>
                </takeThermalPicture>
            </Action>
            <Parameters/>
        </AtomicTask>
        <AtomicTask>
            <TaskID>MoveToEnd</TaskID>
            <TaskDescription>Move to the end location</TaskDescription>
            <Action>
                <ActionType>moveToLocation</ActionType>
                <moveToLocation>
                    <Latitude>37.2660953</Latitude>
                    <Longitude>-120.4201552</Longitude>
                </moveToLocation>
            </Action>
            <Parameters/>
        </AtomicTask>
    </AtomicTasks>
    <ActionSequence>
        <TaskID>MoveToNorthMostTree</TaskID>
        <TaskID>TakePictureNorthMostTree</TaskID>
        <ConditionalActions>
            <Conditional>
                <ConditionalExpression>treeColor == 'green'</ConditionalExpression>
            </Conditional>
            <ActionSequence>
                <TaskID>MoveToEnd</TaskID>
            </ActionSequence>
        </ConditionalActions>
        <ConditionalActions>
            <Conditional>
                <ConditionalExpression>treeColor == 'yellow'</ConditionalExpression>
            </Conditional>
            <ActionSequence>
                <TaskID>MoveToSouthMostTree</TaskID>
                <TaskID>TakePictureSouthMostTree</TaskID>
                <TaskID>MoveToEnd</TaskID>
            </ActionSequence>
        </ConditionalActions>
    </ActionSequence>
    <Outcome>
        <State>atEndPoint</State>
    </Outcome>
    <Exits>
        <Exit>
            <Type>nominal</Type>
        </Exit>
    </Exits>
</TaskTemplate>
