<?xml version="1.0" encoding="UTF-8"?>
<TaskTemplate xmlns="https://robotics.ucmerced.edu/task">
    <CompositeTaskInformation>
        <TaskID>Mission001</TaskID>
        <TaskDescription>take picture of north most tree. if green, go to end. if yellow, take picture of south most tree then end.</TaskDescription>
    </CompositeTaskInformation>
    <Preconditions>
        <Precondition>
            <Condition>atStartingPoint</Condition>
        </Precondition>
    </Preconditions>
    <AtomicTasks>
        <AtomicTask>
            <TaskID>Task001</TaskID>
            <TaskDescription>Move to northmost tree</TaskDescription>
            <Action>
                <ActionType>moveToLocation</ActionType>
                <moveToLocation>
                    <Latitude>37.266406</Latitude>
                    <Longitude>-120.4201625</Longitude>
                </moveToLocation>
            </Action>
            <Parameters/>
        </AtomicTask>
        <AtomicTask>
            <TaskID>Task002</TaskID>
            <TaskDescription>Take picture of northmost tree</TaskDescription>
            <Action>
                <ActionType>takeThermalPicture</ActionType>
                <takeThermalPicture>
                    <numberOfPictures>1</numberOfPictures>
                </takeThermalPicture>
            </Action>
            <Parameters/>
        </AtomicTask>
        <AtomicTask>
            <TaskID>Task003</TaskID>
            <TaskDescription>Move to southmost tree</TaskDescription>
            <Action>
                <ActionType>moveToLocation</ActionType>
                <moveToLocation>
                    <Latitude>37.266139</Latitude>
                    <Longitude>-120.4201578</Longitude>
                </moveToLocation>
            </Action>
            <Parameters/>
        </AtomicTask>
        <AtomicTask>
            <TaskID>Task004</TaskID>
            <TaskDescription>Take picture of southmost tree</TaskDescription>
            <Action>
                <ActionType>takeThermalPicture</ActionType>
                <takeThermalPicture>
                    <numberOfPictures>1</numberOfPictures>
                </takeThermalPicture>
            </Action>
            <Parameters/>
        </AtomicTask>
        <AtomicTask>
            <TaskID>Task005</TaskID>
            <TaskDescription>Move to end point</TaskDescription>
            <Action>
                <ActionType>moveToLocation</ActionType>
                <moveToLocation>
                    <Latitude>37.2660953</Latitude>
                    <Longitude>-120.4201552</Longitude>
                </moveToLocation>
            </Action>
            <Parameters/>
        </AtomicTask>
    </AtomicTasks>
    <ActionSequence>
        <TaskID>Task001</TaskID>
        <Actions>
            <Conditional>
                <ConditionalExpression>color == 'green'</ConditionalExpression>
            </Conditional>
            <ActionSequence>
                <TaskID>Task005</TaskID>
                <Actions/>
            </ActionSequence>
        </Actions>
        <Actions>
            <Conditional>
                <ConditionalExpression>color == 'yellow'</ConditionalExpression>
            </Conditional>
            <ActionSequence>
                <TaskID>Task003</TaskID>
                <TaskID>Task004</TaskID>
                <TaskID>Task005</TaskID>
                <Actions/>
            </ActionSequence>
        </Actions>
    </ActionSequence>
    <Outcome>
        <State>atEndPoint</State>
    </Outcome>
    <Exits>
        <Exit>
            <Type>nominal</Type>
        </Exit>
        <Exit>
            <Type>faulted</Type>
        </Exit>
    </Exits>
</TaskTemplate>
