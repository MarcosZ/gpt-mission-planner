<?xml version="1.0" encoding="UTF-8"?>
<TaskTemplate xmlns="https://robotics.ucmerced.edu/task">
    <CompositeTaskInformation>
        <TaskID>OrchardInspection</TaskID>
        <TaskDescription>Take thermal pictures of pistachio trees at the northern and southern ends of the orchard</TaskDescription>
    </CompositeTaskInformation>
    <Preconditions>
        <Precondition>
            <Condition>atStartingPoint</Condition>
        </Precondition>
    </Preconditions>
    <AtomicTasks>
        <AtomicTask>
            <TaskID>MoveToNorthPistachio</TaskID>
            <TaskDescription>Move to the northernmost pistachio tree</TaskDescription>
            <Action>
                <ActionType>moveToLocation</ActionType>
                <moveToLocation>
                    <Latitude>37.266406</Latitude>
                    <Longitude>-120.4201625</Longitude>
                </moveToLocation>
            </Action>
            <Parameters>
                <Parameter>
                    <VariableName>Speed</VariableName>
                    <VariableValue>Normal</VariableValue>
                </Parameter>
            </Parameters>
        </AtomicTask>
        <AtomicTask>
            <TaskID>TakePictureNorthPistachio</TaskID>
            <TaskDescription>Take thermal picture of the northernmost pistachio tree</TaskDescription>
            <Action>
                <ActionType>takeThermalPicture</ActionType>
                <takeThermalPicture>
                    <numberOfPictures>1</numberOfPictures>
                </takeThermalPicture>
            </Action>
            <Parameters>
                <Parameter>
                    <VariableName>Resolution</VariableName>
                    <VariableValue>High</VariableValue>
                </Parameter>
            </Parameters>
        </AtomicTask>
        <AtomicTask>
            <TaskID>MoveToSouthPistachio</TaskID>
            <TaskDescription>Move to the southernmost pistachio tree</TaskDescription>
            <Action>
                <ActionType>moveToLocation</ActionType>
                <moveToLocation>
                    <Latitude>37.266139</Latitude>
                    <Longitude>-120.4201578</Longitude>
                </moveToLocation>
            </Action>
            <Parameters>
                <Parameter>
                    <VariableName>Speed</VariableName>
                    <VariableValue>Normal</VariableValue>
                </Parameter>
            </Parameters>
        </AtomicTask>
        <AtomicTask>
            <TaskID>TakePictureSouthPistachio</TaskID>
            <TaskDescription>Take thermal picture of the southernmost pistachio tree</TaskDescription>
            <Action>
                <ActionType>takeThermalPicture</ActionType>
                <takeThermalPicture>
                    <numberOfPictures>1</numberOfPictures>
                </takeThermalPicture>
            </Action>
            <Parameters>
                <Parameter>
                    <VariableName>Resolution</VariableName>
                    <VariableValue>High</VariableValue>
                </Parameter>
            </Parameters>
        </AtomicTask>
    </AtomicTasks>
    <ControlConstruct>
        <ConstructType>Sequence</ConstructType>
        <Sequence>
            <TaskID>MoveToNorthPistachio</TaskID>
            <TaskID>TakePictureNorthPistachio</TaskID>
            <TaskID>MoveToSouthPistachio</TaskID>
            <TaskID>TakePictureSouthPistachio</TaskID>
        </Sequence>
    </ControlConstruct>
    <Outcome>
        <State>atEndPoint</State>
    </Outcome>
    <Exits>
        <Exit>
            <Type>nominal</Type>
        </Exit>
    </Exits>
</TaskTemplate>
